<h1>Listing attractions </h1>

<table>
    <thread>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thread>
</table>

<tbody>
  <tr>
    <td><strong>Picture</strong></td>
    <td><strong>Name</strong></td>
    <td><strong>Tickets</strong></td>
    <td><strong>Details</strong></td>
  </tr><br>

  <% @attractions.each do |attraction| %>
  <% if current_user.admin %>
    <a href="/attractions/<%= attraction.id %>">Show <%= attraction.name%></a><br>
    <a href="/attractions/new">New Attraction</a>
    <% else %>
    <tr>
      <td><%= attraction.name %></td><br>
      <td><%= attraction.tickets %></td><br>
      <td><%= link_to "Go on #{attraction.name }", attraction_path(attraction) %></td><br>
      <% end %>
    </tr>
  <% end %>

</tbody>



